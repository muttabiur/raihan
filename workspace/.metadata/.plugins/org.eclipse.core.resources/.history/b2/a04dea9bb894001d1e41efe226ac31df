		Thread.sleep(5000);
		
		Vector v=new Vector();
		
		
			DETInterface h =  (DETInterface)Naming.lookup(url);
	    	 
		
			v=h.printReport() ;
			for (int x=0;x<v.size();x++)
	 	 		System.out.println(v.elementAt(x));
			
			System.out.println("after report");
	    
