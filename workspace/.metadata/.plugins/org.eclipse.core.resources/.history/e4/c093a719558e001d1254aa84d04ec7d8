

import java.util.ArrayList;

/**
 * Max_Min_Heap interface
 */

/**
 * @author Comp-6651, Fall-2008, Group # 3
 *
 */
public interface Min_Max_Heap_Interface {
		
	//returns the maximum and minimum element of the heap
	/**
	 * return the lowest element from the heap
	 */
	public int getMaximum();
	public int getMinimum();
	
	//insert a new element to the heap
	public void insert (int a);
	
	//remove the maximum and minimum of the heap
	public void removeMaximum(); 
	public void removeMinimum();
	
	public ArrayList<Integer> getHeap();
	public void showHeap();
	
}
